#!/bin/bash

# If eb is missing do this one-time initialization:
#       brew install awsebcli

set -e  # Exit on error

APP_NAME="birddog"
ENV_NAME="birddog-env"
REGION="us-east-1"
PLATFORM="Python 3.12"

function init() {
  echo "ğŸ”§ Running EB init setup..."
  eb init "$APP_NAME" --platform "$PLATFORM" --region "$REGION"
  echo "âœ… Setup complete."
}

function deploy() {
  if eb list | grep -Fxq "$ENV_NAME"; then
    echo "ğŸš€ Environment '$ENV_NAME' already exists. Skipping creation."
  else
    echo "ğŸš€ Creating Elastic Beanstalk environment: $ENV_NAME..."
    eb create "$ENV_NAME"
    echo "âœ… Environment created."
  fi

  echo "ğŸ” Setting environment variables from shell..."
  eb setenv \
    AWS_ACCESS_KEY_ID="$AWS_ACCESS_KEY_ID" \
    AWS_DEFAULT_REGION="$AWS_DEFAULT_REGION" \
    AWS_SECRET_ACCESS_KEY="$AWS_SECRET_ACCESS_KEY" \
    OPENAI_API_KEY="$OPENAI_API_KEY" \
    BIRDDOG_SECRET_KEY="$BIRDDOG_SECRET_KEY" \
    BIRDDOG_SMTP_PASSWORD="$BIRDDOG_SMTP_PASSWORD" \
    BIRDDOG_SMTP_PORT="$BIRDDOG_SMTP_PORT" \
    BIRDDOG_SMTP_SERVER="$BIRDDOG_SMTP_SERVER" \
    BIRDDOG_SMTP_USERNAME="$BIRDDOG_SMTP_USERNAME"
  eb printenv

  echo "ğŸ“¦ Deploying application..."
  eb deploy

  echo "ğŸ“Š Checking environment status..."
  eb status

  echo "âœ… Deployment complete."
}

function redeploy() {
  echo "ğŸ“¦ Redeploying application..."
  eb deploy

  echo "ğŸ“Š Checking environment status..."
  eb status

  echo "âœ… Redeploy complete."
}

function terminate() {
  echo "ğŸ”¥ Terminating environment: $ENV_NAME"
  eb terminate "$ENV_NAME" --force 
  echo "âœ… Environment terminated."
}

case "$1" in
  init)
    init
    ;;
  deploy)
    deploy
    ;;
  redeploy)
    redeploy
    ;;
  terminate)
    terminate
    ;;
  open)
    eb open
    ;;
  status)
    eb status
    ;;
  *)
    echo "Usage: $0 {init|deploy|redeploy|open|status|terminate}"
    exit 1
    ;;
esac
